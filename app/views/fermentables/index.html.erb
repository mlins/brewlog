<div class="row-fluid">
  <div class="span12">
    <div class="navbar">
      <div class="navbar-inner">
        <a class="brand" href="<%= fermentables_path %>">Fermentables</a>
        <a class="btn btn-success pull-right" href="/fermentables/new"><i class="icon-plus"></i> Create a Fermentable</a>
      </div>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="span3 well well-small entity-sidebar">
    <%= search_form_for @search do |f| %>
      <label>Name:</label>
      <div class="input-append entity-sidebar-search">
        <%= f.text_field :name_cont, class: "input-block-level", placeholder: "Search" %>
        <span class="add-on"><i class="icon-search"></i></span>
      </div>

      <label>Type:</label>
      <%= f.select :description_eq, Fermentable::DESCRIPTIONS, {include_blank: true}, {class: "input-block-level"} %>

      <label>Origin:</label>
      <%= f.select :origin_eq, Fermentable.countries, {include_blank: true}, {class: "input-block-level"} %>

      <label>Supplier:</label>
      <%= f.select :supplier_eq, Fermentable.suppliers, {include_blank: true}, {class: "input-block-level"} %>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary pull-right"><i class="icon-filter"></i> Filter</button>
      </div>
    <% end %>
  </div>
  <div class="span9 entity-content">
    <table class="table table-bordered table-striped">
      <tr>
        <th><%= sort_link @search, :name, "Name" %></th>
        <th><%= sort_link @search, :description, "Type" %></th>
        <th><%= sort_link @search, :origin, "Origin" %></th>
        <th><%= sort_link @search, :supplier, "Supplier" %></th>
      </tr>
      <% @fermentables.each do |fermentable| %>
        <tr>
          <td><%= link_to fermentable.name, edit_fermentable_path(fermentable) %></td>
          <td><%= fermentable.description %></td>
          <td><%= fermentable.origin %></td>
          <td><%= fermentable.supplier%></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
