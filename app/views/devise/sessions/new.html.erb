<%= form_for @user, url: session_path(@user), html: { class: "form-session" } do |f| %>
  <h2 class="form-session-heading">BrewLog</h2>

  <% if flash[:notice] %>
    <div class="alert alert-info">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:error] %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:error] %>
    </div>
  <% end %>

  <%= devise_error_messages! %>

  <%= f.email_field :email, class: "input-block-level", placeholder: "Email address" %>
  <%= f.password_field :password, class: "input-block-level", placeholder: "Password" %>
  <% if devise_mapping.rememberable? -%>
    <%= f.label :remember_me, class: "checkbox" do %>
      <%= f.check_box :remember_me %> Remember me
    <% end %>
  <% end -%>

  <button class="btn btn-large btn-primary" type="submit">Sign in</button>

  <div class='shared-links'>
    <%= render partial: "devise/shared/links" %>
  </div>
<% end %>
