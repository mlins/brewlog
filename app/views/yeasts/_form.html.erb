<%= form_for @yeast, builder: BootstrapFormBuilder do |f| %>
  <div class="row-fluid">
    <div class="span3">
      <fieldset>
        <legend>General</legend>
        <div class="row-fluid">
          <%= f.text_field :name, class: "span11" %>
          <%= f.text_field :laboratory, class: "span11" %>
          <%= f.text_field :product_id, class: "span11" %>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <%= f.text_area :notes, class: "input-block-level", rows: 10 %>
          </div>
        </div>
      </fieldset>
    </div>
    <div class="span4 offset1">
      <fieldset>
        <legend>Properties</legend>
        <div class="row-fluid">
          <div class="span6">
            <%= f.text_field :min_attenuation, label: "Min Attenuation", class: "span6", append: "%" %>
            <%= f.text_field :max_attenuation, label: "Max Attenuation", class: "span6", append: "%" %>
            <%= f.select :description, Yeast::DESCRIPTIONS, {}, {class: "span8"} %>
            <%= f.select :flocculation, Yeast::FLOCCULATIONS, {}, {class: "span8"} %>
            <%= f.select :form, Yeast::FORMS, {}, { class: "span8" } %>
          </div>
          <div class="span6">
            <%= f.text_field :min_temperature, label: "Min Temperature", class: "span6", append: "F" %>
            <%= f.text_field :max_temperature, label: "Max Temperature", class: "span6", append: "F" %>
          </div>
        </div>
      </fieldset>
    </div>
  </div>
  <div class="form-actions">
    <% unless @yeast.new_record? %>
      <a href="<%= yeast_path(@yeast) %>" class="btn btn-danger" data-confirm="Are you sure?" data-method="delete" rel="nofollow"><i class="icon-trash"></i> Delete</a>
    <% end %>
    <button type="submit" class="btn btn-primary"><i class="icon-save"></i> Save</button>
  </div>
<% end %>
