<div class="row-fluid">
  <div class="span12">
    <div class="navbar">
      <div class="navbar-inner">
        <a class="brand" href="<%= yeasts_path %>">Yeasts</a>
        <a class="btn btn-success pull-right" href="/yeasts/new"><i class="icon-plus"></i> Create a Yeast</a>
      </div>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="span3 well well-small entity-sidebar">
    <%= search_form_for @search do |f| %>
      <label>Name:</label>
      <div class="input-append entity-sidebar-search">
        <%= f.text_field :name_cont, :class => "input-block-level", :placeholder => "Search" %>
        <span class="add-on"><i class="icon-search"></i></span>
      </div>

      <label>Product ID:</label>
      <div class="input-append entity-sidebar-search">
        <%= f.text_field :product_id_cont, :class => "input-block-level", :placeholder => "Search" %>
        <span class="add-on"><i class="icon-search"></i></span>
      </div>

      <label>Laboratory:</label>
      <%= f.select :laboratory_eq, Yeast.laboratories, {:include_blank => true}, {:class => "input-block-level"} %>

      <label>Type:</label>
      <%= f.select :description_eq, Yeast::DESCRIPTIONS, {:include_blank => true}, {:class => "input-block-level"} %>

      <label>Form:</label>
      <%= f.select :form_eq, Yeast::FORMS, {:include_blank => true}, {:class => "input-block-level"} %>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary pull-right"><i class="icon-filter"></i> Filter</button>
      </div>
    <% end %>
  </div>
  <div class="span9 entity-content">
    <table class="table table-bordered table-striped">
      <tr>
        <th><%= sort_link @search, :name, "Name" %></th>
        <th><%= sort_link @search, :laboratory, "Laboratory" %></th>
        <th><%= sort_link @search, :product_id, "Product ID" %></th>
        <th><%= sort_link @search, :description, "Type" %></th>
        <th><%= sort_link @search, :form, "Form" %></th>
      </tr>
      <% @yeasts.each do |yeast| %>
        <tr>
          <td><%= link_to yeast.name, edit_yeast_path(yeast) %></td>
          <td><%= yeast.laboratory %></td>
          <td><%= yeast.product_id %></td>
          <td><%= yeast.description %></td>
          <td><%= yeast.form %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
